@using BizzBingo.Web.Infrastructure.Raven.Indexes
@model List<LatestResourceIndex.LatestResourceResult> 
@{
    Layout = "";   
}
@for (int i = 0; i < Model.Count; i++)
{
    var resource = Model[i];
    <div class="span8">
        <h3>@resource.TermTitle</h3>
        <a href="@resource.Url">Loading...</a>
        <p>
            <a class="btn" href="@Url.Action("Detail", "Term", new { area = "Wiki", slug = resource.TermSlug })">
                Sounds good - give me more information about @resource.TermTitle &raquo;</a>
        </p>
    </div>
}
