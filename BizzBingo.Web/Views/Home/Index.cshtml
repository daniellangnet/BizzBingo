<!-- Newest -->
<div class="row">
    <div class="span16">
        <div class="page-header">
            <h2>Newest tech stacks on KnowYourStack.com</h2>
        </div>
        <div class="row">
            <div class="span6">
                <div class="well" style="min-height: 220px;">
                    <img style="margin-left: 50px; opacity: .3; position: absolute; height: 200px;" src="@Url.Content("~/Content/Images/love.png")" alt="">
                </div>
            </div>
            <div class="offset1 span9">
                @foreach (var words in Model.Newest)
                { 
                    <div class="row">
                        <div class="page-header">
                            <h4>@words.Title &nbsp;<small>@words.CreatedOn.ToShortDateString()</small></h4>
                        </div>
                        <p data-tag="@words.Title"></p>
                        <div style="display: none;" class="well stackoverflowFound">
                            <p><strong>This information is from the awesome <a href="http://stackoverflow.com/tags/info">Stackoverflow Community</a>!</strong></p>
                        </div>
                        <div style="display: none;" class="alert-message warning stackoverflowNotFound">
                                <p><strong>We searched for the information on <a href="http://stackoverflow.com/">Stackoverflow.com</a>, but didn´t find anything.</strong><br/> But it would be awesome, if you could help and <a href="http://stackoverflow.com/tags/@words.Title.ToLower()/info">share some information on Stackoverflow</a> too!</p>
                        </div>
                        <p>
                            <a class="btn primary" href="@Url.Action("Detail", "Term", new { area = "Wiki", slug = words.Slug })">
                                I want do learn more about @words.Title &raquo;</a>
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div id="modal-from-dom" class="modal hide fade">
    <div class="modal-header">
        <a href="#" class="close">&times;</a>
        <h3>
            Share a new buzzword</h3>
    </div>
    @using (Ajax.BeginForm("Share", "Home", new AjaxOptions() { HttpMethod = "POST", OnComplete = "shareCallback" }))
    {
        <div class="modal-body">
            <fieldset>
                <div class="clearfix">
                    <label for="title">
                        Buzzword</label>
                    <div class="input">
                        <input class="xlarge" name="title" size="30" type="text">
                    </div>
                </div>
                <!-- /clearfix -->
            </fieldset>
        </div>
        <div class="modal-footer">
            <input type="submit" id="shareButton" value="Share" class="btn primary">
        </div>
    }
</div>
@section Scripts
{
    <script type="text/javascript">

        $(function () {
            $('#recentResources').embedly({ key: Global_EmbedLy_Key,
                maxWidth: 450,
                maxHeight: 450
            });

            $("p[data-tag]").each(function (index, element) {
                $.ajax({
                    type: 'GET',
                    url: 'http://api.stackoverflow.com/1.1/tags/' + $(element).data("tag") + '/wikis',
                    dataType: 'jsonp',
                    success: function (data) {
                        if (data.tag_wikis.length > 0) {
                            $(element).html(data.tag_wikis[0].wiki_excerpt);
                            $(element).parent().find(".stackoverflowFound").show();
                        }
                        else {
                            $(element).parent().find(".stackoverflowNotFound").show();
                        }
                    },
                    jsonp: 'jsonp'
                });
            });
        });

        function shareCallback(result) {

            if (result.responseText != 'false') {

                $('#modal-from-dom').modal('hide');
                var resultObject = $.parseJSON(result.responseText);
                window.location.href = resultObject.ToTermUrl;
            }
        }
	    
    </script>
}
