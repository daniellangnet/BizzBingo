@using BizzBingo.Web.Models.Home
@{
    ViewBag.Title = "Welcome!";
}
@model IndexViewModel
<div class="hero-unit">
    <h1>
        Hello!</h1>
    <p>
        Want to know more about your tech stack? You want to tell the world, why this or that rocks or sucks? Great! We want our opinion!</p>
    <p>
        <a class="btn primary large" data-controls-modal="modal-from-dom" data-backdrop="static">
            Share a buzzword...</a></p>
</div>
<div class="row">
    <div class="span16">
        <div class="page-header">
            <h2>
                Newests presentations or videos</h2>
        </div>
        <div class="row" id="recentResources">
            @{ Html.RenderAction("MostRecent", "Resource", new { area = "Wiki" }); }
        </div>
    </div>
</div>
<br/>
<div class="row">
    <div class="span16">
        <div class="page-header">
            <h2>
                Newests users</h2>
        </div>
        <div class="row" id="newestUsers">
            <div class="span10">
                @foreach (var user in Model.NewestUsers)
                { 
                        <a href="http://twitter.com/@user.Name">
                            <img src="http://api.twitter.com/1/users/profile_image/@user.Name" alt="@user.Name on Twitter" title="@user.Name on Twitter" />
                        </a>
                }
            </div>
            <div class="span6">
                <div class="alert-message block-message warning">
                      <p><strong>Want to be part of this community?</strong></p>
                      <div class="alert-actions">
                        <a style="height: 10px;" href="@Url.Action("Index", "Auth", new { area = "" })"><img src="@Url.Content("~/Content/Images/sign-in-with-twitter-d.png")" alt="Just sign in with our Twitter" title="Just sign in with our Twitter"/></a>
                      </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- top -->
<div class="row">
    <div class="span16">
        <div class="page-header">
            <h2>Tech Stacks with most success stories</h2>
        </div>
        <div class="row">
            <div class="span6">
                <div class="well" style="min-height: 400px;">
                    <img style="margin-left: 50px; opacity: .3; position: absolute; height: 400px;" src="@Url.Content("~/Content/Images/yeah.png")" alt="">
                </div>
            </div>
            <div class="offset1 span9">
                @foreach (var words in Model.Top)
                { 
                    <div class="row">
                        <div class="page-header">
                            <h4>
                                @words.Title &nbsp;
                                @if (words.UpVotes > 0)
                                {<span class="label">@words.UpVotes success stories!</span>}
                            </h4>
                        </div>
                        <p data-tag="@words.Title">
                        </p>
                        <div style="display: none;" class="well stackoverflowFound">
                            <p><strong>This information is from the awesome <a href="http://stackoverflow.com/tags/@words.Slug/info">Stackoverflow Community</a>!</strong></p>
                        </div>
                        <div style="display: none;" class="alert-message block-message warning stackoverflowNotFound">
                                <p><strong>We searched for the information on <a href="http://stackoverflow.com/">Stackoverflow.com</a>, but didn´t find anything.</strong><br/> But it would be awesome, if you could help and <a href="http://stackoverflow.com/tags/@words.Title.ToLower()/info">share some information on Stackoverflow</a> too!</p>
                        </div>
                        <p>
                            <a class="btn primary" href="@Url.Action("Detail", "Term", new { area = "Wiki", slug = words.Slug })">
                                I want do learn more about @words.Title &raquo;</a>
                        </p>
                    </div>
                }
                <div class="row">
                    <div class="alert-message warning">
                        <p>
                            <strong>If you think, there should be another great topic in this list:</strong><br />
                            Just go to a buzzword and write a success story!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
